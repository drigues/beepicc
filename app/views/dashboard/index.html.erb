<div class="flex flex-col md:flex-row min-h-screen bg-gray-100">
  <!-- Sidebar -->
  <aside class="w-full md:w-64 bg-white p-4 border-r">
    <h1 class="text-2xl font-bold text-indigo-600 mb-6">Beepi.cc</h1>
    <%= render 'shared/sidebar' %>
  </aside>

  <!-- Main Content -->
  <main class="flex-1 p-4 sm:p-6 md:p-8 space-y-8">
    <!-- Top Header -->
    <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center">
      <div>
        <h2 class="text-2xl font-bold">Hello, <%= current_user.profile&.name.presence || current_user.email %> ðŸ‘‹</h2>
        <p class="text-sm text-gray-500">Your public link: <code>beepi.cc/<%= current_user.directory %></code></p>
      </div>
      <div class="mt-2 sm:mt-0 flex space-x-2">
        <button class="bg-gray-200 px-3 py-1 text-sm rounded">Copy</button>
        <button class="bg-indigo-600 text-white px-3 py-1 text-sm rounded">Share</button>
      </div>
    </div>

    <!-- Overview Cards -->
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4">
      <div class="bg-white p-4 rounded shadow">
        <div class="flex justify-between text-sm text-gray-500">
          <span>Total Views</span>
          <select class="bg-transparent focus:outline-none text-indigo-600">
            <option>7 Days</option>
            <option>30 Days</option>
          </select>
        </div>
        <p class="text-3xl font-bold mt-2">0</p>
      </div>
      <div class="bg-white p-4 rounded shadow">
        <span class="text-sm text-gray-500">Total Clicks</span>
        <p class="text-3xl font-bold mt-2">0</p>
      </div>
      <div class="bg-white p-4 rounded shadow">
        <span class="text-sm text-gray-500">Followers</span>
        <p class="text-3xl font-bold mt-2">0</p>
      </div>
    </div>

    <!-- Quick Stats -->
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4">
      <div class="bg-white p-4 rounded shadow">
        <div class="flex justify-between items-center">
          <span class="font-semibold">My Links</span>
          <button class="text-indigo-600 text-sm">Add</button>
        </div>
        <p class="text-2xl font-bold mt-2">0</p>
      </div>
      <div class="bg-white p-4 rounded shadow">
        <div class="flex justify-between items-center">
          <span class="font-semibold">My Clicks</span>
          <button class="text-indigo-600 text-sm">View</button>
        </div>
        <p class="text-2xl font-bold mt-2">0</p>
      </div>
      <div class="bg-white p-4 rounded shadow">
        <div class="flex justify-between items-center">
          <span class="font-semibold">My Shares</span>
          <button class="text-indigo-600 text-sm">Share Now</button>
        </div>
        <p class="text-2xl font-bold mt-2">0</p>
      </div>
    </div>

    <!-- Onboarding -->
    <div class="bg-white p-6 rounded shadow">
      <h3 class="text-lg font-semibold mb-3">Your Start Guide</h3>
      <ol class="list-decimal list-inside text-sm text-gray-700 space-y-1">
        <li>Claim your username</li>
        <li>Add your first link</li>
        <li>Customize your theme</li>
        <li>Share your page</li>
      </ol>
    </div>

    <!-- Tailwind Test -->
    <div class="bg-yellow-100 border border-yellow-400 text-yellow-800 p-4 rounded">
      ðŸš€ If you see this yellow box, Tailwind is working!
    </div>

    <!-- Mobile Preview -->
    <div class="bg-white p-6 rounded shadow">
      <h3 class="text-lg font-semibold mb-3">Live Preview</h3>
      <div class="w-full max-w-xs h-[550px] border rounded-xl bg-gray-50 mx-auto flex items-center justify-center">
        <p class="text-gray-400 text-sm text-center">Your Beepi.cc page preview here</p>
      </div>
    </div>
  </main>
</div>
