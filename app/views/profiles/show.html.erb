<%# app/views/profiles/show.html.erb %>
<% case @profile.theme %>

<% when "neon" %>
  <%= render "profiles/templates/neon", profile: @profile, user: @user, links: @links %>
<% when "classic" %>
  <%= render "profiles/templates/classic", profile: @profile, user: @user, links: @links %>
<% else %>
  <%= render "profiles/templates/minimal", profile: @profile, user: @user, links: @links %>
<% end %>
