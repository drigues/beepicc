<div class="min-h-screen grid grid-cols-1 md:grid-cols-2 bg-white">
  <!-- Left: Sign-up Form -->
  <div class="flex flex-col justify-center px-8 py-12 sm:px-16">
    <div class="mb-8">
      <%= link_to root_path, class: "inline-block mb-6" do %>
        <h1 class="text-2xl font-bold text-gray-900">Beepi<span class="text-blue-600">.cc</span></h1>
      <% end %>
      <h2 class="text-3xl font-extrabold text-gray-900 mb-2">Sign up to Beepi</h2>
      <p class="text-gray-600 mb-4">
        Get your Link in Bio, personalize it, and share everything you do — for free.
      </p>
    </div>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "space-y-6" }) do |f| %>
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-1">Username</label>
        <div class="flex items-center rounded-md border px-3 py-2 shadow-sm bg-white text-gray-500">
          <span>beepi.cc/</span>
          <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "ml-1 flex-1 border-0 focus:ring-0 text-gray-900 placeholder-gray-400" %>
        </div>
      </div>

      <div>
        <label class="block text-sm font-medium text-gray-700 mb-1">Email</label>
        <%= f.email_field :email, required: true, class: "w-full px-3 py-2 border rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500" %>
      </div>

      <div>
        <label class="block text-sm font-medium text-gray-700 mb-1">Password</label>
        <%= f.password_field :password, required: true, class: "w-full px-3 py-2 border rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500" %>
      </div>

      <div>
        <%= f.submit "Create Account", class: "w-full py-3 px-6 bg-blue-600 text-white font-semibold rounded-lg hover:bg-blue-700 transition" %>
      </div>

      <p class="text-xs text-gray-500 text-center">
        By signing up, you agree to our <a href="/terms" class="underline">Terms</a> and <a href="/privacy" class="underline">Privacy Policy</a>.
      </p>
    <% end %>

    <p class="mt-6 text-sm text-center">
      Already have an account? <%= link_to "Sign in", new_session_path(resource_name), class: "text-blue-600 hover:underline" %>
    </p>
  </div>

  <!-- Right: Visuals -->
  <div class="hidden md:flex items-center justify-center bg-gradient-to-br from-purple-100 via-white to-green-100 px-4">
    <div class="max-w-sm">
      <img src="/images/mockup-mobile.png" alt="Mobile preview" class="rounded-xl shadow-xl mb-6">
      <blockquote class="text-gray-800 text-sm text-center italic">
        “Beepi has made it seamless to showcase my work and boosted my visibility.”
        <div class="mt-2 font-semibold text-gray-700">Cleo Recruiter</div>
        <div class="text-xs text-gray-500">beepi.cc/cleorecruiter</div>
      </blockquote>
    </div>
  </div>
</div>
