
  <div class="flex flex-col justify-center items-center px-8 py-12 bg-white">
    <div class="w-full max-w-md">
      <h1 class="text-3xl font-bold text-gray-900 mb-2">Join Briguila</h1>
      <p class="text-sm text-gray-600 mb-6">Create your account</p>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "space-y-4" }) do |f| %>
        <div>
          <%= f.label :name, class: "block text-sm font-medium text-gray-700" %>
          <%= f.text_field :name, autofocus: true, class: "mt-1 block w-full px-4 py-2 border rounded-md bg-gray-100" %>
        </div>

        <div>
          <%= f.label :directory, class: "block text-sm font-medium text-gray-700" %>
          <%= f.text_field :directory, class: "mt-1 block w-full px-4 py-2 border rounded-md bg-gray-100" %>
        </div>

        <div>
          <%= f.label :email, class: "block text-sm font-medium text-gray-700" %>
          <%= f.email_field :email, class: "mt-1 block w-full px-4 py-2 border rounded-md bg-gray-100" %>
        </div>

        <div>
          <%= f.label :password, class: "block text-sm font-medium text-gray-700" %>
          <%= f.password_field :password, autocomplete: "new-password", class: "mt-1 block w-full px-4 py-2 border rounded-md bg-gray-100" %>
        </div>

        <div>
          <%= f.label :password_confirmation, class: "block text-sm font-medium text-gray-700" %>
          <%= f.password_field :password_confirmation, class: "mt-1 block w-full px-4 py-2 border rounded-md bg-gray-100" %>
        </div>

        <div>
          <%= f.submit "Sign up", class: "w-full py-2 px-4 bg-black text-white rounded-md hover:bg-gray-900" %>
        </div>
      <% end %>

      <p class="mt-4 text-sm text-center">
        Already have an account?
        <%= link_to "Log in", new_session_path(resource_name), class: "text-indigo-600 hover:underline" %>
      </p>
    </div>
  </div>