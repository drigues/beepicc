<h2 class="text-2xl font-bold mb-6">Create an Account</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "space-y-4" }) do |f| %>
  <div>
    <%= f.label :name, class: "block text-sm font-medium text-gray-700" %>
    <%= f.text_field :name, autofocus: true, class: "mt-1 block w-full px-4 py-2 border rounded-md shadow-sm" %>
  </div>

  <div>
    <%= f.label :directory, class: "block text-sm font-medium text-gray-700" %>
    <%= f.text_field :directory, class: "mt-1 block w-full px-4 py-2 border rounded-md shadow-sm" %>
  </div>

  <div>
    <%= f.label :email, class: "block text-sm font-medium text-gray-700" %>
    <%= f.email_field :email, class: "mt-1 block w-full px-4 py-2 border rounded-md shadow-sm" %>
  </div>

  <div>
    <%= f.label :password, class: "block text-sm font-medium text-gray-700" %>
    <%= f.password_field :password, autocomplete: "new-password", class: "mt-1 block w-full px-4 py-2 border rounded-md shadow-sm" %>
  </div>

  <div>
    <%= f.label :password_confirmation, class: "block text-sm font-medium text-gray-700" %>
    <%= f.password_field :password_confirmation, class: "mt-1 block w-full px-4 py-2 border rounded-md shadow-sm" %>
  </div>

  <div>
    <%= f.submit "Sign up", class: "w-full py-2 px-4 bg-indigo-600 text-white rounded-md hover:bg-indigo-700" %>
  </div>
<% end %>

<p class="mt-4 text-sm text-center">
  Already have an account?
  <%= link_to "Log in", new_session_path(resource_name), class: "text-indigo-600 hover:underline" %>
</p>
