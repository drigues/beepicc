  <div class="flex flex-col justify-center items-center px-8 py-12 bg-white">
    <div class="w-full max-w-md">
      <h1 class="text-3xl font-bold text-gray-900 mb-2">Forgot your password?</h1>
      <p class="text-sm text-gray-600 mb-6">Enter your email and well send you instructions to reset it.</p>

      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { class: "space-y-4" }) do |f| %>
        <div>
          <%= f.label :email, class: "block text-sm font-medium text-gray-700" %>
          <%= f.email_field :email, autofocus: true, class: "mt-1 block w-full px-4 py-2 border rounded-md bg-gray-100" %>
        </div>

        <div>
          <%= f.submit "Send reset instructions", class: "w-full py-2 px-4 bg-black text-white rounded-md hover:bg-gray-900" %>
        </div>
      <% end %>

      <p class="mt-4 text-sm text-center">
        <%= link_to "Back to login", new_session_path(resource_name), class: "text-indigo-600 hover:underline" %>
      </p>
    </div>
  </div>
