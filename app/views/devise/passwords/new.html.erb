<h2 class="text-2xl font-bold mb-6 text-center">Forgot your password?</h2>

<p class="text-gray-600 mb-6 text-sm text-center">
  Enter your email address and weâ€™ll send you instructions to reset your password.
</p>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { class: "space-y-4" }) do |f| %>
  <div>
    <%= f.label :email, class: "block text-sm font-medium text-gray-700" %>
    <%= f.email_field :email, autofocus: true, class: "mt-1 block w-full px-4 py-2 border rounded-md shadow-sm" %>
  </div>

  <div>
    <%= f.submit "Send me reset instructions", class: "w-full py-2 px-4 bg-indigo-600 text-white rounded-md hover:bg-indigo-700" %>
  </div>
<% end %>

<div class="mt-6 text-sm text-center">
  <%= link_to "Back to login", new_session_path(resource_name), class: "text-indigo-600 hover:underline" %>
</div>
