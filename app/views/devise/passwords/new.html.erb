<div class="min-h-screen grid grid-cols-1 md:grid-cols-2 bg-white">
  <!-- Left: Forgot Password Form -->
  <div class="flex flex-col justify-center px-8 py-12 sm:px-16">
    <div class="mb-8">
      <%= link_to root_path, class: "inline-block mb-6" do %>
        <h1 class="text-2xl font-bold text-gray-900">Beepi<span class="text-blue-600">.cc</span></h1>
      <% end %>
      <h2 class="text-3xl font-extrabold text-gray-900 mb-2">Forgot your password?</h2>
      <p class="text-gray-600 mb-6">No worries. Enter your email and well send instructions to reset it.</p>
    </div>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { class: "space-y-6" }) do |f| %>
      <div>
        <%= f.label :email, "Email", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", required: true,
            class: "w-full px-3 py-2 border rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500" %>
      </div>

      <div>
        <%= f.submit "Send Reset Instructions", class: "w-full py-3 px-6 bg-black text-white font-semibold rounded-lg hover:bg-gray-900 transition" %>
      </div>
    <% end %>

    <div class="mt-6 text-center text-sm">
      <%= link_to "Back to login", new_session_path(resource_name), class: "text-blue-600 hover:underline" %>
    </div>
  </div>

  <!-- Right: Visual/testimonial panel -->
  <div class="hidden md:flex items-center justify-center bg-gradient-to-tr from-lime-100 via-white to-blue-100 px-4">
    <div class="max-w-sm">
      <img src="/images/mockup-mobile.png" alt="Mobile preview" class="rounded-xl shadow-xl mb-6">
      <blockquote class="text-gray-800 text-sm text-center italic">
        “Resetting my password was super simple — love the experience.”
        <div class="mt-2 font-semibold text-gray-700">@mariana</div>
        <div class="text-xs text-gray-500">beepi.cc/mariana</div>
      </blockquote>
    </div>
  </div>
</div>
