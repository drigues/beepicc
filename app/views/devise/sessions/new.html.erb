<div class="min-h-screen grid grid-cols-1 md:grid-cols-2 bg-white">
  <!-- Left: Login Form -->
  <div class="flex flex-col justify-center px-8 py-12 sm:px-16">
    <div class="mb-8">
      <%= link_to root_path, class: "inline-block mb-6" do %>
        <h1 class="text-2xl font-bold text-gray-900">Beepi<span class="text-blue-600">.cc</span></h1>
      <% end %>
      <h2 class="text-3xl font-extrabold text-gray-900 mb-2">Welcome back!</h2>
      <p class="text-gray-600 mb-6">Log in to your Beepi.cc account</p>
    </div>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "space-y-6" }) do |f| %>
      <div>
        <%= f.label :email, "Email", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", required: true,
            class: "w-full px-3 py-2 border rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500" %>
      </div>

      <div>
        <%= f.label :password, "Password", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.password_field :password, autocomplete: "current-password", required: true,
            class: "w-full px-3 py-2 border rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500" %>
      </div>

      <div>
        <%= f.submit "Sign in", class: "w-full py-3 px-6 bg-black text-white font-semibold rounded-lg hover:bg-gray-900 transition" %>
      </div>
    <% end %>

    <div class="text-center text-sm mt-4 space-x-4">
      <%= link_to "Forgot password?", new_password_path(resource_name), class: "text-blue-600 hover:underline" %>
      <span class="text-gray-400">·</span>
      <%= link_to "Forgot username?", "#", class: "text-blue-600 hover:underline" %>
    </div>

    <div class="my-6 flex items-center text-sm text-gray-500">
      <div class="flex-grow border-t border-gray-300"></div>
      <span class="px-3">or</span>
      <div class="flex-grow border-t border-gray-300"></div>
    </div>

    <!-- Social Sign-in buttons (placeholder) -->
    <div class="space-y-3">
      <a href="#" class="w-full flex items-center justify-center border rounded-lg py-2 font-medium hover:bg-gray-50">
        <span class="mr-2">🌐</span> Sign in with Google
      </a>
      <a href="#" class="w-full flex items-center justify-center border rounded-lg py-2 font-medium hover:bg-gray-50">
        <span class="mr-2">📘</span> Sign in with Facebook
      </a>
      <a href="#" class="w-full flex items-center justify-center border rounded-lg py-2 font-medium hover:bg-gray-50">
        <span class="mr-2"></span> Sign in with Apple
      </a>
      <a href="#" class="w-full flex items-center justify-center border rounded-lg py-2 font-medium hover:bg-gray-50">
        <span class="mr-2">✉️</span> Sign in with Magic Link
      </a>
    </div>

    <p class="mt-6 text-sm text-center">
      Dont have an account? <%= link_to "Sign up", new_registration_path(resource_name), class: "text-blue-600 hover:underline" %>
    </p>
  </div>

  <!-- Right: Visual or promo -->
  <div class="hidden md:flex items-center justify-center bg-gradient-to-tr from-blue-200 via-lime-100 to-white px-4">
    <div class="max-w-sm">
      <img src="/images/mockup-mobile.png" alt="Mobile preview" class="rounded-xl shadow-xl mb-6">
      <blockquote class="text-gray-800 text-sm text-center italic">
        “Beepi.cc lets me manage my creator brand like a pro.”
        <div class="mt-2 font-semibold text-gray-700">Jordan Creator</div>
        <div class="text-xs text-gray-500">beepi.cc/jordan</div>
      </blockquote>
    </div>
  </div>
</div>
