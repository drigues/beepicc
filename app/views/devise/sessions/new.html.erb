<h2 class="text-2xl font-bold mb-6">Log in to your account</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "space-y-4" }) do |f| %>
  <div>
    <%= f.label :email, class: "block text-sm font-medium text-gray-700" %>
    <%= f.email_field :email, autofocus: true, class: "mt-1 block w-full px-4 py-2 border rounded-md shadow-sm" %>
  </div>

  <div>
    <%= f.label :password, class: "block text-sm font-medium text-gray-700" %>
    <%= f.password_field :password, autocomplete: "current-password", class: "mt-1 block w-full px-4 py-2 border rounded-md shadow-sm" %>
  </div>

  <div>
    <%= f.submit "Log in", class: "w-full py-2 px-4 bg-indigo-600 text-white rounded-md hover:bg-indigo-700" %>
  </div>
<% end %>

<div class="mt-4 text-sm text-center">
  <%= link_to "Forgot your password?", new_password_path(resource_name), class: "text-indigo-600 hover:underline" %>
</div>

